<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron job pour mettre à jour automatiquement les statuts de recyclage -->
        <record id="cron_update_recyclage_status" model="ir.cron">
            <field name="name">Mise à jour automatique des statuts de recyclage</field>
            <field name="model_id" ref="model_ange_employee_formation"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_recyclage_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        
    </data>
</odoo>
