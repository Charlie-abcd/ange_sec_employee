<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste des formations par employé -->
        <record id="view_hr_employee_formation_list" model="ir.ui.view">
            <field name="name">ange.employee.formation.list</field>
            <field name="model">ange.employee.formation</field>
            <field name="arch" type="xml">
                <list string="Formations Employés" decoration-success="statut=='terminee'" 
                      decoration-warning="statut=='en_cours'" decoration-danger="statut=='recyclage_requis'"
                      decoration-muted="statut=='non_fait'">
                    <field name="employee_id"/>
                    <field name="formation_id"/>
                    <field name="statut" widget="badge"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="date_recyclage"/>
                    <field name="jours_avant_recyclage"/>
                    <field name="alerte_recyclage" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire des formations par employé -->
        <record id="view_hr_employee_formation_form" model="ir.ui.view">
            <field name="name">ange.employee.formation.form</field>
            <field name="model">ange.employee.formation</field>
            <field name="arch" type="xml">
                <form string="Formation Employé">
                    <header>
                        <button name="action_marquer_en_cours" type="object" string="Marquer En Cours" 
                                class="btn-primary" invisible="statut == 'en_cours'"/>
                        <button name="action_marquer_terminee" type="object" string="Marquer Terminée" 
                                class="btn-success" invisible="statut == 'terminee'"/>
                        <button name="action_marquer_non_fait" type="object" string="Remettre à Zéro" 
                                class="btn-secondary" invisible="statut == 'non_fait'"/>
                        <field name="statut" widget="statusbar" statusbar_visible="non_fait,en_cours,terminee,recyclage_requis"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <group>
                                    <field name="formation_id"/>
                                </group>
                            </h1>
                            <h2>
                                <group>
                                    <field name="employee_id"/>
                                </group>
                            </h2>
                        </div>
                        
                        <group>
                            <group name="formation_info" string="Informations Formation">
                                <field name="formation_id"/>
                                <field name="employee_id"/>
                                <field name="duree_avant_recyclage" readonly="1"/>
                            </group>
                            <group name="dates" string="Dates">
                                <div class="o_row">
                                    <label for="date_debut" string="Période de formation"/>
                                    <field name="date_debut" widget="daterange" nolabel="1" options="{'end_date_field': 'date_fin'}"/>
                                </div>
                                <field name="duree_formation" readonly="1"/>
                                <field name="date_recyclage" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="recyclage" string="Recyclage">
                                <field name="jours_avant_recyclage" readonly="1"/>
                                <field name="alerte_recyclage" readonly="1"/>
                            </group>
                            <group name="statut" string="Statut">
                                <field name="statut"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue kanban des formations par employé -->
        <record id="view_hr_employee_formation_kanban" model="ir.ui.view">
            <field name="name">ange.employee.formation.kanban</field>
            <field name="model">ange.employee.formation</field>
            <field name="arch" type="xml">
                <kanban default_group_by="statut" class="o_kanban_small_column">
                    <field name="employee_id"/>
                    <field name="formation_id"/>
                    <field name="statut"/>
                    <field name="date_fin"/>
                    <field name="alerte_recyclage"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="employee_id"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="formation_id"/>
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <field name="alerte_recyclage" widget="boolean_toggle" 
                                                   invisible="not alerte_recyclage"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <t t-if="record.date_fin.raw_value">
                                            <span>Fin: <field name="date_fin"/></span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche/filtres -->
        <record id="view_hr_employee_formation_search" model="ir.ui.view">
            <field name="name">ange.employee.formation.search</field>
            <field name="model">ange.employee.formation</field>
            <field name="arch" type="xml">
                <search string="Rechercher Formations Employés">
                    <field name="employee_id"/>
                    <field name="formation_id"/>
                    
                    <filter string="Non effectuées" name="non_fait" domain="[('statut', '=', 'non_fait')]"/>
                    <filter string="En cours" name="en_cours" domain="[('statut', '=', 'en_cours')]"/>
                    <filter string="Terminées" name="terminee" domain="[('statut', '=', 'terminee')]"/>
                    <filter string="Recyclage requis" name="recyclage_requis" domain="[('statut', '=', 'recyclage_requis')]"/>
                    
                    <separator/>
                    <filter string="Alerte recyclage" name="alerte_recyclage" domain="[('alerte_recyclage', '=', True)]"/>
                    
                    <group expand="0" string="Grouper par">
                        <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Formation" name="group_formation" context="{'group_by': 'formation_id'}"/>
                        <filter string="Statut" name="group_statut" context="{'group_by': 'statut'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action principale -->
        <record id="action_hr_employee_formation" model="ir.actions.act_window">
            <field name="name">Formations par Employé</field>
            <field name="res_model">ange.employee.formation</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_hr_employee_formation_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune formation d'employé trouvée !
                </p>
                <p>
                    Assignez des formations aux employés pour suivre leurs statuts individuels.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_hr_employee_formation"
                  name="Statuts de formations"
                  parent="menu_hr_formation"
                  action="action_hr_employee_formation"
                  sequence="15"/>

    </data>
</odoo>
